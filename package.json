{
  "name": "ts-fastify-prisma",
  "version": "0.0.2",
  "description": "TypeScript, Fastify, Prisma",
  "author": "Sangdon Park",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "pnpm run pr:gen",
    "prestart": "pnpm run clean && pnpm run build",
    "start": "NODE_ENV=production node dist/main.js",
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "pnpm run build && concurrently -p none \"tsc -w\" \"nodemon --watch dist --exec 'NODE_ENV=development node -r source-map-support/register' dist/main.js | pino-pretty\"",
    "dev:debug": "pnpm run build && concurrently -p none \"tsc -w\" \"nodemon --watch dist --exec 'NODE_ENV=debug node -r source-map-support/register --inspect=9229' dist/main.js\"",
    "dev:kill": "pgrep -fl nodemon | awk '{print $1}' | xargs -r -I{} kill -2 {} && lsof -ti :8080 | xargs -r -I{} kill {}",
    "pr:gen": "prisma generate",
    "pr:db": "prisma db",
    "pr:mig": "prisma migrate",
    "typecheck": "tsc --noEmit --incremental false --tsBuildInfoFile null",
    "circular": "pnpm run prestart && madge --warning --circular dist/",
    "circular:only": "madge --warning --circular dist/",
    "lint": "eslint 'src/**/*'",
    "lint:quiet": "eslint --quiet 'src/**/*'",
    "lint:fix": "eslint --fix 'src/**/*'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.1",
    "@fastify/helmet": "^10.1.0",
    "@gquittet/graceful-server": "^2.5.1",
    "@prisma/client": "4.12.0",
    "@types/lodash": "^4.14.173",
    "@types/node": "^16.9.2",
    "awilix": "^5.0.1",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "fastify": "^4.15.0",
    "fastify-plugin": "^4.5.0",
    "lodash": "^4.17.21",
    "serialize-error": "^8.1.0",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.0",
    "madge": "^5.0.1",
    "nodemon": "^2.0.12",
    "pino-pretty": "^7.0.1",
    "prettier": "^2.4.1",
    "prisma": "4.12.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.20",
    "ts-jest": "^27.0.5"
  }
}

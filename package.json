{
  "name": "ts-fastify-prisma",
  "version": "0.1.0",
  "description": "TypeScript, Fastify, Prisma",
  "author": "Sangdon Park",
  "license": "MIT",
  "type": "module",
  "main": "dist/main.js",
  "packageManager": "pnpm@9.0.6+sha512.f6d863130973207cb7a336d6b439a242a26ac8068077df530d6a86069419853dc1ffe64029ec594a9c505a3a410d19643c870aba6776330f5cfddcf10a9c1617",
  "scripts": {
    "postinstall": "pnpm run prm:gen",
    "prestart": "pnpm run clean && pnpm run build",
    "start": "NODE_ENV=production node --enable-source-maps dist/main.js",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "dev": "pnpm run build && concurrently -p none \"tsc -p tsconfig.build.json -w\" \"prisma generate --watch\" \"graphql-codegen --watch\" \"nodemon --watch dist --exec 'node --enable-source-maps' dist/main.js | pino-pretty\"",
    "dev:kill": "pgrep -fl $(pwd)/node_modules/.bin | awk '{print $1}' | xargs -r -I{} kill -2 {} && lsof -ti :8080 | xargs -r -I{} kill {}",
    "dev:debug": "pnpm run build && concurrently -p none \"tsc -p tsconfig.build.json -w\" \"nodemon --watch dist --exec 'DEBUG=1 node --enable-source-maps --inspect=9229' dist/main.js | pino-pretty\"",
    "typecheck": "tsc -p tsconfig.build.json --noEmit --incremental false --tsBuildInfoFile null",
    "circular": "pnpm run prestart && madge --circular dist/",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --apply src/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prm:gen": "prisma generate",
    "prm:db": "prisma db",
    "prm:mig": "prisma migrate",
    "gql:gen": "graphql-codegen"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@gquittet/graceful-server": "^4.0.8",
    "@prisma/client": "5.6.0",
    "@sinclair/typebox": "^0.31.28",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.2",
    "awilix": "^9.0.0",
    "default-import": "^1.1.5",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "fastify-plugin": "^4.5.1",
    "graphql": "^16.8.1",
    "lodash-es": "^4.17.21",
    "serialize-error": "^11.0.3",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@parcel/watcher": "^2.3.0",
    "@types/jest": "^29.5.10",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "madge": "^6.1.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^10.2.3",
    "prisma": "5.6.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1"
  }
}

{
  "name": "ts-fastify-prisma",
  "version": "0.0.2",
  "description": "TypeScript, Fastify, Prisma",
  "author": "Sangdon Park",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "prestart": "pnpm run clean && pnpm run build",
    "start": "NODE_ENV=production node dist/main.js",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "dev": "pnpm run build && concurrently -p none \"tsc -p tsconfig.build.json -w\" \"prisma generate --watch\" \"nodemon --watch dist --exec 'node -r source-map-support/register' dist/main.js | pino-pretty\"",
    "dev:ts": "nodemon --watch src --exec 'ts-node --esm' src/main.ts | pino-pretty",
    "dev:kill": "pgrep -fl $(pwd)/node_modules/.bin | awk '{print $1}' | xargs -r -I{} kill -2 {} && lsof -ti :8080 | xargs -r -I{} kill {}",
    "dev:debug": "pnpm run build && concurrently -p none \"tsc -p tsconfig.build.json -w\" \"nodemon --watch dist --exec 'DEBUG=1 node -r source-map-support/register --inspect=9229' dist/main.js | pino-pretty\"",
    "typecheck": "tsc -p tsconfig.build.json --noEmit --incremental false --tsBuildInfoFile null",
    "circular": "pnpm run prestart && madge --circular dist/",
    "lint": "eslint 'src/**/*'",
    "lint:fix": "eslint --fix 'src/**/*'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "postinstall": "pnpm run prm:gen",
    "prm:gen": "prisma generate",
    "prm:db": "prisma db",
    "prm:mig": "prisma migrate"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^10.1.1",
    "@fastify/type-provider-typebox": "^3.2.0",
    "@gquittet/graceful-server": "^4.0.7",
    "@prisma/client": "4.15.0",
    "@sinclair/typebox": "^0.28.15",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.0",
    "awilix": "^8.0.1",
    "dotenv": "^16.1.4",
    "fastify": "^4.18.0",
    "fastify-plugin": "^4.5.0",
    "lodash": "^4.17.21",
    "serialize-error": "^8.1.0",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "concurrently": "^8.2.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "madge": "^6.1.0",
    "nodemon": "^2.0.22",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "prisma": "4.15.0",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0"
  }
}

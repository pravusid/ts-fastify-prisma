{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "skipLibCheck": true,
    "incremental": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitOverride": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "types/**/*"
  ]
}

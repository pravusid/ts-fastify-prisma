{
  "name": "ts-fastify-prisma",
  "version": "0.1.0",
  "description": "TypeScript, Fastify, Prisma",
  "author": "Sangdon Park",
  "license": "MIT",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "pnpm run prm:gen",
    "prestart": "pnpm run clean && pnpm run build",
    "start": "NODE_ENV=production node dist/main.js",
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist",
    "dev": "pnpm run build && concurrently -p none \"tsc -p tsconfig.build.json -w\" \"prisma generate --watch\" \"graphql-codegen --watch\" \"nodemon --watch dist --exec 'node -r @cspotcode/source-map-support/register' dist/main.js | pino-pretty\"",
    "dev:kill": "pgrep -fl $(pwd)/node_modules/.bin | awk '{print $1}' | xargs -r -I{} kill -2 {} && lsof -ti :8080 | xargs -r -I{} kill {}",
    "dev:debug": "pnpm run build && concurrently -p none \"tsc -p tsconfig.build.json -w\" \"nodemon --watch dist --exec 'DEBUG=1 node -r @cspotcode/source-map-support/register --inspect=9229' dist/main.js | pino-pretty\"",
    "typecheck": "tsc -p tsconfig.build.json --noEmit --incremental false --tsBuildInfoFile null",
    "circular": "pnpm run prestart && madge --circular dist/",
    "lint": "eslint 'src/**/*'",
    "lint:fix": "eslint --fix 'src/**/*'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "prm:gen": "prisma generate",
    "prm:db": "prisma db",
    "prm:mig": "prisma migrate",
    "gql:gen": "graphql-codegen"
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/type-provider-typebox": "^3.5.0",
    "@gquittet/graceful-server": "^4.0.8",
    "@prisma/client": "5.1.1",
    "@sinclair/typebox": "^0.31.1",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^20.5.0",
    "awilix": "^8.0.1",
    "default-import": "^1.1.5",
    "dotenv": "^16.3.1",
    "fastify": "^4.21.0",
    "fastify-plugin": "^4.5.1",
    "graphql": "^16.8.0",
    "lodash-es": "^4.17.21",
    "serialize-error": "^11.0.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@cspotcode/source-map-support": "^0.8.1",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "madge": "^6.1.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.2",
    "prisma": "5.1.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1"
  }
}
